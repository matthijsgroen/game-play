{
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9.]+$": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" },
          "events": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2
            }
          }
        },
        "required": ["x", "y"],
        "additionalProperties": false
      }
    }
  }
}
