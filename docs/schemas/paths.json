{
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9.]+$": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "x": { "type": "number", "minimum": -2, "maximum": 2 },
          "y": { "type": "number", "minimum": -2, "maximum": 2 },
          "events": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": [
                {
                  "title": "location along path",
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                {
                  "type": "object",
                  "properties": {
                    "event": { "type": "string" },
                    "setState": {
                      "type": "array",
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "title": "state name",
                          "type": "string"
                        },
                        {
                          "title": "duration in ms",
                          "type": "number"
                        }
                      ]
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          }
        },
        "required": ["x", "y"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
