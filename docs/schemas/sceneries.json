{
  "type": "object",
  "patternProperties": {
    "^[A-Z][a-zA-Z0-9.]+$": {
      "type": "object",
      "properties": {
        "width": { "type": "integer" },
        "height": { "type": "integer" },
        "left": {
          "oneOf": [
            { "type": "string", "pattern": "^[A-Z][a-zA-Z0-9.]+$" },
            {
              "type": "object",
              "patternProperties": {
                "^[A-Z][a-zA-Z0-9.]+$": {
                  "type": "number"
                }
              }
            }
          ]
        },
        "right": {
          "oneOf": [
            { "type": "string", "pattern": "^[A-Z][a-zA-Z0-9.]+$" },
            {
              "type": "object",
              "patternProperties": {
                "^[A-Z][a-zA-Z0-9.]+$": { "type": "number" }
              }
            }
          ]
        },
        "backgrounds": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": [{ "type": "string" }, { "type": "integer" }]
          }
        },
        "altitudes": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer" }
        },
        "elements": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "z": { "type": "integer" },
              "w": { "type": "integer" },
              "h": { "type": "integer" },
              "distance": { "type": "number", "minimum": 0 },
              "composition": {
                "type": ["string", "array"],
                "minItems": 2,
                "maxItems": 2,
                "items": [
                  { "type": "string" },
                  {
                    "type": "object",
                    "description": "Same as composition frame data"
                  }
                ]
              },
              "frame": { "type": "string" },
              "components": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
              },
              "attributes": { "type": "object" }
            },
            "required": ["x", "y"],
            "additionalProperties": false
          }
        }
      },
      "required": ["width", "height", "left", "right", "elements"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
